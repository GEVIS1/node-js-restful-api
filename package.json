{
  "name": "assessment-1-node-js-restful-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=17.0.0"
  },
  "type": "module",
  "scripts": {
    "start": "nodemon --experimental-specifier-resolution=node src/app.ts",
    "test": "npx cross-env NODE_ENV=testing mocha --exit",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "prisma:seed": "npx cross-env NODE_ENV=testing npx prisma db seed",
    "prettier:fix": "npx prettier --write",
    "prettier:check": "npx prettier --check",
    "lint:fix": "npx eslint --fix",
    "prepare": "husky install",
    "postinstall": "npx prisma generate",
    "cm": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/otago-polytechnic-bit-courses/assessment-1-node-js-restful-api-GEVIS1.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/otago-polytechnic-bit-courses/assessment-1-node-js-restful-api-GEVIS1/issues"
  },
  "homepage": "https://github.com/otago-polytechnic-bit-courses/assessment-1-node-js-restful-api-GEVIS1#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run prettier:fix",
      "npm run lint:fix"
    ],
    "*.json": [
      "npm run prettier:fix"
    ]
  },
  "prisma": {
    "schema": "prisma/v2/schema.prisma",
    "seed": "ts-node --experimental-specifier-resolution=node prisma/v2/seeder/run-seeding.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.2.1",
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-list-endpoints": "^6.0.0",
    "helmet": "^5.1.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "node-cache": "^5.1.2",
    "prisma-zod-generator": "^0.5.3",
    "utility-types": "^3.10.0",
    "uuid": "^8.3.2",
    "zod": "^3.18.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^9.1.5",
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.3.1",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-list-endpoints": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.2.1",
    "prisma-erd-generator": "^1.0.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
